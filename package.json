{
  "name": "hugo-site",
  "description": "This is the repository from which the Hugo-generated version of https://www.brycewray.com/ is built.",
  "author": "Bryce Wray",
  "license": "MIT",
  "config": {
    "hugo": "0.119.0",
    "myIP": "192.168.0.70"
  },
  "scripts": {
    "clean": "rimraf public",
    "search": "pagefind --site public",
    "testbuild:search": "npm run search -- --bundle-dir ../static/_pagefind",
    "dev:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://$npm_package_config_myIP:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc",
    "move-excerpts": "move-cli public/posts/index.xml public/index-excerpts.xml && move-cli public/posts/index.json public/index-excerpts.json",
    "prod:hugo": "hugo --minify --gc --logLevel info",
    "start": "NODE_ENV=development npm-run-all clean dev:hugo",
    "build:prelim": "NODE_ENV=production npm-run-all clean prod:hugo",
    "build": "npm-run-all build:prelim move-excerpts search",
		"deploy:wrangler": "wrangler pages deploy public --commit-dirty=true",
		"deploy": "npm-run-all build deploy:wrangler",
    "testbuild:hugo": "npm run dev:hugo -- --minify --environment production",
    "testbuild": "npm-run-all clean build:prelim move-excerpts testbuild:hugo",
    "testbuildpf": "npm-run-all build:prelim move-excerpts testbuild:search testbuild:hugo"
  },
  "devDependencies": {
    "move-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.0.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "rimraf": "^5.0.5",
    "wrangler": "^3.15.0"
  }
}
