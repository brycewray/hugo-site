{
  "name": "hugo_site",
  "description": "This is the repository from which the [Hugo](https://gohugo.io)-generated version of [www.brycewray.com](https://www.brycewray.com/) is built.",
  "scripts": {
    "divider00": "=============== GLOBAL ===============",
    "clean": "rimraf public",
    "pagefind": "pagefind --source public",
		"divider09": "                                      ",
    "divider10": "===============  SASS  ===============",
    "devsass:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc",
    "devsass": "sass --no-source-map themes/sass/assets/scss:assets/css",
    "devsass:sass": "npm run devsass -- --watch",
    "prodsass:hugo": "hugo --minify",
    "prodsass": "sass --no-source-map themes/sass/assets/scss:assets/css --style=compressed",
    "prodsass:sass": "npm run prodsass",
    "testbuildsass:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc --environment=production",
    "testbuildsass:sass": "npm run prodsass -- --watch",
    "divider15": "- - - - - - - - - - - - - - - - - - - -",
    "startsass": "NODE_ENV=development npm-run-all clean devsass --parallel devsass:*",
    "buildsass": "NODE_ENV=production npm-run-all clean prodsass prod:hugosass",
    "testbuildsass": "NODE_ENV=production npm-run-all clean prodsass --parallel testbuildsass:*",
    "testbuildpfsass": "NODE_ENV=production npm-run-all buildsass pagefind --parallel testbuildsass:*",
		"divider19": "                                      ",
    "divider20": "=============== POSTCSS ==============",
    "devnew:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc",
    "devpostcss": "postcss themes/newcss/assets/cssfrom --dir themes/newcss/assets/css",
		"devnew:postcss": "npm run devpostcss -- --watch",
    "prodnew:hugo": "hugo --minify",
		"prodpostcss": "postcss themes/newcss/assets/cssfrom --dir themes/newcss/assets/css",
		"prodnew:postcss": "npm run prodpostcss",
    "testbuildnew:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc --environment=production",
		"testbuildnew:postcss": "npm run prodpostcss -- --watch",
    "divider25": "- - - - - - - - - - - - - - - - - - - -",
    "startnew": "NODE_ENV=development npm-run-all clean devpostcss --parallel devnew:*",
    "buildnew": "NODE_ENV=production npm-run-all clean prodnew:postcss prodnew:hugo",
    "testbuildnew": "NODE_ENV=production npm-run-all clean --parallel testbuildnew:*",
    "testbuildpfnew": "NODE_ENV=production npm-run-all buildnew pagefind --parallel testbuildnew:*",
		"divider98": "                                      ",
    "divider99": "=============== FINISH ==============="
  },
  "author": "Bryce Wray",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pagefind": "^0.10.7",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^11.1.0",
    "rimraf": "^4.1.2",
    "sass": "^1.58.0"
  }
}
